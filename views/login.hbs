<!-- views/login.hbs -->
<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
</head>
<body>
<div>

<div>

    <h1> Login</h1>

    <!-- show any messages that come back with authentication FIXME  - not working?-->
    {{#if message.length }}
        <div>{{ message }}</div>
    {{/if}}

    <!-- LOGIN FORM -->
    <form action="/login" method="post">
        <div>
            <label>Email</label>
            <input type="text" name="email">
        </div>
        <div>
            <label>Password</label>
            <input type="password" name="password">
        </div>

        <button type="submit">Login</button>
    </form>

</div>

</div>
</body>
</html>

